<link rel="stylesheet" type="text/css" href="~/Content/jquery-easyui-1.6.11/themes/default/easyui.css" />
<link rel="stylesheet" type="text/css" href="~/Content/jquery-easyui-1.6.11/themes/icon.css" />
<script type="text/javascript" src="~/Content/jquery-easyui-1.6.11/jquery.min.js"></script>
<script type="text/javascript" src="~/Content/jquery-easyui-1.6.11/jquery.easyui.min.js"></script>
<script type="text/javascript" src="~/Content/jquery-easyui-1.6.11/datagrid-detailview.js"></script>

<style>
    body {
        margin: 0px;
        padding: 0px;
    }
</style>

<table id="dg" class="easyui-datagrid" style="width:100%;height:100%;"
       url="/CommodityManage/GetAllConsumeCommodity" toolbar="#toolbar" striped="true" loadMsg="正在加载数据" rownumbers="true" fitColumns="true" singleSelect="true">
    <thead>
        <tr>
            <th field="Id" width="50">编号</th>
            <th field="CompleteNum" width="50">房间编号</th>
            <th field="Name" width="50">商品名称</th>
            <th field="CommodityNum" width="50">消耗数量</th>
            <th field="EstablishDate" width="50">消耗时间</th>
        </tr>
    </thead>
</table>

@*表格的工具栏*@
<div id="toolbar" style="padding:8px;height:auto">
    <div style="margin-bottom:5px">
        <span style="margin-right:10px;">完整编号：</span><input id="completeNum" name="completeNum" class="easyui-textbox" style="width:100px">
        <span style="margin-right:10px;">商品名称：</span><input id="name" name="name" class="easyui-textbox" style="width:100px">
        <a href="#" class="easyui-linkbutton" style="margin-left:10px;" iconCls="icon-search" onclick="doSearch()">搜索</a>
    </div>
</div>


<script>
    /*设置分页属性*/
    $(function () {
        init_datagrid();
    });

    function dgReload() {
        $('#dg').datagrid('reload');
    }

    /*表格属性初始化*/
    function init_datagrid() {
        $("#dg").datagrid({
            method: 'post',
            singleSelect: true,
            remoteSort: true, //定义从服务器对数据进行排序。
            pagination: true, //在DataGrid控件底部显示分页工具栏。
            pageNumber: 1,
            pageSize: 20,
            pageList: [5, 10, 15, 20],
            fitColumns: true,
            rownumbers: true,
            checkbox: true,
            selectOnCheck: false,
            checkOnSelect: false
        });

        var p = $('#dg').datagrid('getPager');
        $(p).pagination({
            beforePageText: '第',//页数文本框前显示的汉字
            afterPageText: '页    共 {pages} 页',
            displayMsg: '当前显示 {from}-{to} 条记录,共 {total} 条记录',
        })
    }

    /*搜索按钮*/
    function doSearch() {
        $('#dg').datagrid('load', {
            name: $('#name').val(),
            completeNum: $('#completeNum').val()            
        });
    }
</script>

